<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE4E1"
    tools:context=".MainActivity">

    <!-- Botón para crear entrevista -->
    <Button
        android:id="@+id/btnCrearEntrevista"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:text="Crear Entrevista"
        android:textColor="@android:color/white"
        android:textSize="16sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para ver entrevistas -->
    <Button
        android:id="@+id/btnVerEntrevista"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Ver Entrevistas"
        android:textColor="@android:color/white"
        android:textSize="16sp"

        app:layout_constraintTop_toBottomOf="@id/btnCrearEntrevista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para ver entrevistas en Base64 -->
    <Button
        android:id="@+id/btnVerEntrevistasBase64"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Ver Entrevistas Base64"
        android:textColor="@android:color/white"
        android:textSize="16sp"

        app:layout_constraintTop_toBottomOf="@id/btnVerEntrevista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Imagen decorativa -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="216dp"
        android:layout_height="385dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnVerEntrevistasBase64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/foto2"
        android:scaleType="centerCrop"
        android:contentDescription="Imagen decorativa" />

</androidx.constraintlayout.widget.ConstraintLayout>
